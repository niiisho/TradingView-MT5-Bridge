{
  "manifest_version": 3,
  "name": "TradingView Trade Detector",
  "version": "1.0",
  "description": "Detects new trades and logs them",
  "author": "Nishant P.Garg",
  "homepage_url": "https://github.com/niiisho/tradingview-mt5-bridge",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "logger.html"
  },
  "options_ui": {
    "page": "logger.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.tradingview.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
